<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="164dp" app:srcCompat="@mipmap/devslopesbanner"
            android:id="@+id/banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorPrimaryDark"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/devslopesprofilelogo"
            android:id="@+id/top_logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/top_logo"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@mipmap/favoritebutton"
            tools:layout_editor_absoluteY="192dp" android:id="@+id/imageView17"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintHorizontal_bias="0.9" app:layout_constraintEnd_toStartOf="@+id/imageView18"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@mipmap/camerabutton"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/imageView17" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView19" app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@mipmap/inboxbutton"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/imageView18" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
    <Button
            android:text="customize dashboard"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/background_light" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp" android:layout_marginRight="22dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/codeimage"
            android:id="@+id/imageView20" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/top_logo" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/dataimage"
            android:id="@+id/imageView21" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/imageView20"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="16dp"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/imagesimage"
            android:id="@+id/imageView22" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="@+id/imageView20" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/videosimage"
            android:id="@+id/imageView23"
            android:scaleType="centerCrop" app:layout_constraintEnd_toEndOf="@+id/imageView21"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="16dp"
            app:layout_constraintDimensionRatio="16:9"/>
</android.support.constraint.ConstraintLayout>