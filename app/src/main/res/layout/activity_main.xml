<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/devslopesbanner"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/banner" android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent" android:cropToPadding="false"
            android:scaleType="center"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="82dp" app:srcCompat="@mipmap/devslopesprofilelogo"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/top_logo" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="DevSlopes"
              app:layout_constraintTop_toTopOf="@+id/banner"
              android:layout_marginTop="140dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.498"
              app:layout_constraintEnd_toEndOf="parent"
              android:textSize="28dp" android:id="@+id/textView"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@mipmap/camerabutton"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/top_logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintVertical_bias="0.136"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@mipmap/favoritebutton"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@mipmap/inboxbutton"
            android:id="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/codeimage"
            android:id="@+id/imageView7" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginRight="8dp"
            app:layout_constraintDimensionRatio="1:1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/dataimage"
            android:id="@+id/imageView8" android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintDimensionRatio="1:1" app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/imagesimage"
            android:id="@+id/imageView9"
            android:scaleType="centerCrop" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView7" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/videosimage"
            android:id="@+id/imageView10"
            android:scaleType="centerCrop" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>